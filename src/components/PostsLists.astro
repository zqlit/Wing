---
import FormattedDate from "./FormattedDate.astro";
import { formatDateKey } from "../utils/dataFormatte";

interface Props {
  posts?: any[];
}

// 如果没有传入 posts，则从集合中获取（向后兼容）
let { posts } = Astro.props;

if (!posts) {
  const { getCollection } = await import("astro:content");
  posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
}
---

{
  posts.map((post) => {
    const key = formatDateKey(post.data.pubDate);
    return (
      <li class="list-none pb-3 border-b border-b-gray-200 dark:border-b-slate-800" transition:name={`post-card-${key}`} transition:animate="slide">
        <a href={`/${key}.html`} class="block">
          <h4 class="title font-bold text-2xl underline decoration-dotted decoration-2 underline-offset-2 pt-8 pb-3" transition:name={`post-title-${key}`}>{post.data.title}</h4>
          <p class="date text-sm text-gray-500" transition:name={`post-date-${key}`}>
            <FormattedDate date={post.data.pubDate} />
          </p>
          {post.data.description && (
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 italic" transition:name={`post-desc-${key}`}>
              {post.data.description}
            </p>
          )}
        </a>
      </li>
    );
  })
}

