---
import HeaderLink from "./HeaderLink.astro";
import defineConfig from "../../astro.config.mjs";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import FormattedDate from "../components/FormattedDate.astro";
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

{
  posts.map((post) => (
    <li class="list-none pb-3 border-b border-b-gray-200 dark:border-b-slate-800">
      <a href={`/blog/${post.id}/`} class=" block ">
        <h4 class="title font-bold text-2xl underline decoration-dotted decoration-2 underline-offset-2 pt-8 pb-3" transition:name={`post-title-${post.id}`}>{post.data.title}</h4>
        <p class="date text-sm text-gray-500" transition:name={`post-date-${post.id}`}>
          <FormattedDate date={post.data.pubDate} />
        </p>
      </a>
    </li>
  ))
}
