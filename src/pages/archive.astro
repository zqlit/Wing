---
import PostLayout from "../layouts/PostLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { formatDateKey } from "../utils/dataFormatte";

// 获取所有文章并按日期排序
const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// 按年份分组
const postsByYear = allPosts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof allPosts>);

// 获取年份并排序（从新到旧）
const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);
---

<PostLayout
  title="文章归档"
  slug="archive"
  pubDate={new Date()}
  enableComments={false}
>
  <div class="space-y-8">
    {years.map((year) => (
      <section class="space-y-3">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">{year}</h2>

        <div class="space-y-2">
          {postsByYear[year].map((post) => {
            const key = formatDateKey(post.data.pubDate);
            const month = String(post.data.pubDate.getMonth() + 1).padStart(2, '0');
            const day = String(post.data.pubDate.getDate()).padStart(2, '0');
            return (
              <a
                href={`/${key}.html`}
                class="flex items-baseline gap-4 hover:text-blue-600 dark:hover:text-blue-400 transition"
              >
                <time class="text-sm text-gray-500 dark:text-gray-500 min-w-[44px]">
                  {month}/{day}
                </time>
                <span class="text-base text-gray-900 dark:text-gray-100">
                  {post.data.title}
                </span>
              </a>
            );
          })}
        </div>
      </section>
    ))}
  </div>
</PostLayout>
