---
import PostLayout from "../layouts/PostLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { formatDateKey } from "../utils/dataFormatte";

// 获取所有文章并按日期排序
const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// 按年份分组
const postsByYear = allPosts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof allPosts>);

// 获取年份并排序（从新到旧）
const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);
---

<PostLayout
  title="文章归档"
  slug="archive"
  pubDate={new Date()}
  enableComments={false}
>
  <div class="mb-8">
    <p class="text-gray-600 dark:text-gray-400">
      共 {allPosts.length} 篇文章
    </p>
  </div>

  <div class="space-y-16 relative">
    {years.map((year) => (
      <div class="archive-year relative">
        {/* 年份标记 */}
        <div class="flex items-center gap-3 mb-6">
          <div class="relative flex items-center">
            <div class="w-3 h-3 rounded-full bg-gray-400 dark:bg-gray-600 ring-2 ring-gray-200 dark:ring-gray-800"></div>
            <div class="absolute left-1.5 top-1/2 w-10 h-px bg-gray-300 dark:bg-gray-700"></div>
          </div>
          <h2 class="text-2xl font-bold flex items-center gap-3">
            <span>{year}</span>
            <span class="text-base font-normal text-gray-500 dark:text-gray-400">
              {postsByYear[year].length} 篇文章
            </span>
          </h2>
        </div>
        
        {/* 时间轴容器 */}
        <div class="ml-2 border-l-2 border-gray-200 dark:border-gray-800 pl-8 space-y-6 relative">
          {postsByYear[year].map((post, index) => {
            const key = formatDateKey(post.data.pubDate);
            return (
              <div class="archive-item group relative">
                {/* 时间轴节点 */}
                <div class="absolute -left-[33px] top-2 w-2 h-2 rounded-full bg-gray-400 dark:bg-gray-600 group-hover:bg-gray-900 dark:group-hover:bg-gray-200 transition-colors"></div>
                
                <a
                  href={`/${key}.html`}
                  class="block"
                >
                  <div class="flex flex-col sm:flex-row sm:items-baseline gap-2 sm:gap-4 mb-2">
                    <time class="text-sm text-gray-500 dark:text-gray-500 font-mono min-w-[90px]">
                      <FormattedDate date={post.data.pubDate} />
                    </time>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      {post.data.title}
                    </h3>
                  </div>
                  {post.data.description && (
                    <p class="text-sm text-gray-600 dark:text-gray-400 sm:ml-[106px] line-clamp-2">
                      {post.data.description}
                    </p>
                  )}
                </a>
              </div>
            );
          })}
        </div>
      </div>
    ))}
  </div>
</PostLayout>
